pub fn Layout(ctx: zx.LayoutContext, children: zx.Component) zx.Component {
  const allocator = ctx.arena;
  
  return (
    <html lang="en-US">
      <head>
        <title>Zx</title>
      </head>

      <body>
        <template shadowrootmode="open">
          {(children)}
        </template>
      </body>
    </html>
  );
}

const zx = @import("zx");
const std = @import("std");