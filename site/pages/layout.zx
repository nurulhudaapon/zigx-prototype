pub fn Layout(ctx: zx.LayoutContext, children: zx.Component) zx.Component {
    return (
        <html @allocator={ctx.arena}>
        
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>ZX</title>
        </head>
        
        <body>
            {(children)}
        </body>
        </html>
    );
}

const zx = @import("zx");
const std = @import("std");
