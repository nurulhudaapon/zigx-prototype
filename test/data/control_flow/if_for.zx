pub fn Page(ctx: zx.PageContext) zx.Component {
    const show_users = true;
    const user_names = [_][]const u8{ "John", "Jane", "Jim", "Jill" };
    return (
        <main @allocator={ctx.arena}>
            {if (show_users) {
                for (user_names) |name| (<p>{name}</p>)
            } else {
                (<p>Users hidden</p>)
            }}
    );
}

const zx = @import("zx");
